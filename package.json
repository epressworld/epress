{
  "type": "module",
  "scripts": {
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install; fi",
    "start": "NODE_ENV=production node commands/start.mjs",
    "dev": "NODE_ENV=development nodemon -w ./server commands/start.mjs",
    "build": "next build ./client",
    "migrate": "node commands/migrate.mjs",
    "seed": "node commands/migrate.mjs seed run",
    "seed:make": "node commands/migrate.mjs seed make",
    "test": "NODE_ENV=test ava",
    "lint": "biome check .",
    "lint:fix": "biome check --apply-unsafe . && biome format --write ."
  },
  "lint-staged": {
    "*.{js,jsx,mjs}": [
      "npm run lint -- --write"
    ]
  },
